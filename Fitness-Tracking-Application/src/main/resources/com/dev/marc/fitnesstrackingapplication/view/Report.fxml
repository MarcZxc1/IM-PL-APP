<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="730.0" prefWidth="1113.0" style="-fx-background-color: #E2F1E7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dev.marc.fitnesstrackingapplication.controller.ReportController">

    <!-- Center Report Section -->
    <center>
        <AnchorPane prefHeight="722.0" prefWidth="951.0">
            <VBox layoutY="51.0" prefHeight="462.0" prefWidth="950.0" spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="143.0" AnchorPane.topAnchor="51.0">

                <!-- Summary -->
                <HBox prefHeight="1.0" prefWidth="1016.0" spacing="40">
                    <Label fx:id="totalStepsLabel" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #1E2F38;" text="Total Steps: 0" />
                    <Label fx:id="totalWorkoutsLabel" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #1E2F38;" text="Workouts Completed: 0" />
                </HBox>

                <!-- Detailed Box -->
                <VBox prefHeight="377.0" prefWidth="922.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #3B7B7B; -fx-border-width: 1; -fx-border-radius: 5;">
                    <Label style="-fx-text-fill: #1E2F38;" text="Step Details">
                        <font><Font name="Segoe UI Semibold" size="16" /></font>
                    </Label>
                    <ListView fx:id="stepListView" prefHeight="120" />

                    <Label style="-fx-text-fill: #1E2F38;" text="Workout Details">
                        <font><Font name="Segoe UI Semibold" size="16" /></font>
                    </Label>
                    <ListView fx:id="workoutListView" prefHeight="120" />
                </VBox>
            </VBox>
         <Label fx:id="labell" layoutX="14.0" prefHeight="46.0" prefWidth="501.0" style="-fx-font-size: 30px; -fx-text-fill: #1E2F38; -fx-font-weight: bold;" text="Weekly / Monthly Fitness Report">
            <font>
               <Font size="58.0" />
            </font>
            <effect>
               <DropShadow />
            </effect>
         </Label>
        </AnchorPane>
    </center>
</BorderPane>
