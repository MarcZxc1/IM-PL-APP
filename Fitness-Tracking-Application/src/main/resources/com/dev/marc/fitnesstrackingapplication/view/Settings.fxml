<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #E2F1E7;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.dev.marc.fitnesstrackingapplication.controller.SettingsController">
    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebarVBox" spacing="10" style="-fx-background-color: #3B7B7B; -fx-padding: 20; -fx-pref-width: 200;">
            <ToggleButton fx:id="dashboardButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Dashboard" />
            <ToggleButton fx:id="profileButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Profile" />
            <ToggleButton fx:id="nutritionButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Nutrition" />
            <ToggleButton fx:id="workoutButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Workout / Goal" />
            <ToggleButton fx:id="fitnessMetricButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Fitness Metric" />
            <ToggleButton fx:id="reminderButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Reminder" />
            <ToggleButton fx:id="reportButton" style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Report" />

            <VBox VBox.vgrow="ALWAYS" />

            <ToggleButton fx:id="settingsButton" selected="true" style="-fx-background-color: #639A8F; -fx-background-radius: 8;-fx-font-size: 16px; -fx-text-fill: #1E2F38; -fx-alignment: CENTER_LEFT;" text="  Settings" />
            <Button style="-fx-background-color: transparent;-fx-font-size: 16px; -fx-text-fill: #E2F1E7; -fx-alignment: CENTER_LEFT;" text="  Log out" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <AnchorPane>
            <VBox spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                <Label style="-fx-text-fill: #1E2F38;" text="Settings">
                    <font>
                        <Font name="Segoe UI Bold" size="24" />
                    </font>
                </Label>

                <VBox spacing="5">
                    <Label style="-fx-text-fill: #1E2F38;" text="Profile">
                        <font>
                            <Font name="Segoe UI Semibold" size="16" />
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: #1E2F38;" text="Update your photo and personal details here." />
                </VBox>

                <!-- Form Grid -->
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>

                    <!-- Row 1: Address -->
                    <Label style="-fx-text-fill: #1E2F38;" text="Address" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField prefWidth="300" promptText="Commonwealth, Quezon City" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" />

                    <!-- Row 2: Email -->
                    <Label style="-fx-text-fill: #1E2F38;" text="Email Address" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField prefWidth="300" promptText="geiyndncln@gmail.com" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="3" />

                    <!-- Row 3: DOB & Gender -->
                    <Label style="-fx-text-fill: #1E2F38;" text="Date of Birth" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField promptText="12.30.2001" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <Label style="-fx-text-fill: #1E2F38;" text="Gender" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <TextField prefHeight="29.0" prefWidth="262.0" promptText="Male" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- Photo section -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox spacing="5">
                        <Label style="-fx-text-fill: #1E2F38;" text="Your photo" />
                        <Label style="-fx-text-fill: #1E2F38; -fx-font-size: 12;" text="This will be displayed on your profile." />
                    </VBox>
                    <ImageView fitHeight="50" fitWidth="50" style="-fx-background-radius: 25; -fx-border-radius: 25;" />
                    <Hyperlink style="-fx-text-fill: #3B7B7B;" text="Delete" />
                    <Hyperlink style="-fx-text-fill: #3B7B7B;" text="Update" />
                </HBox>

                <!-- Socials -->
                <VBox spacing="10">
                    <Label style="-fx-text-fill: #1E2F38;" text="Social Profiles" />

                    <!-- Facebook/Instagram Field -->
                    <HBox spacing="10">
                        <Label style="-fx-text-fill: #1E2F38;" text="Facebook" />
                        <TextField prefWidth="200" promptText="facebook.com" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" />
                    </HBox>

                    <HBox spacing="10">
                        <Label style="-fx-text-fill: #1E2F38;" text="Instagram" />
                        <TextField prefWidth="200" promptText="instagram.com" style="-fx-background-color: #ffffff; -fx-text-fill: #1E2F38; -fx-border-color: #3B7B7B; -fx-border-width: 2;" />
                    </HBox>
                </VBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
