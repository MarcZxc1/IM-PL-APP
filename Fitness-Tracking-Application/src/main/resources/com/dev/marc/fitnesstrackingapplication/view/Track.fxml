<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<AnchorPane fx:id="paneContainer" prefHeight="680.0" prefWidth="1250.0"
            style="-fx-background-color: #E2F1E7;" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dev.marc.fitnesstrackingapplication.controller.MapController">

   <children>

      <!-- Title -->
      <Label layoutX="607.0" layoutY="40.0" text="TRACK"
             style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1E2F38;" />

      <!-- Back Button -->
      <Button fx:id="toDashboard" layoutX="44.0" layoutY="40.0" mnemonicParsing="false"
              onAction="#homeButton" text="BACK"
              style="-fx-background-color: #3B7B7B; -fx-text-fill: white; -fx-font-weight: bold;" />

      <!-- WebView Map -->
      <WebView fx:id="mapWebView" layoutX="44.0" layoutY="135.0" prefHeight="386.0" prefWidth="377.0"
               style="-fx-border-color: #3B7B7B; -fx-border-radius: 6; -fx-border-width: 2;" />

      <!-- Login Button -->
      <Button fx:id="loginButton" layoutX="1040.0" layoutY="104.0" mnemonicParsing="false"
              onAction="#loginWithStrava" text="Connect Strava"
              style="-fx-background-color: #639A8F; -fx-text-fill: white; -fx-font-weight: bold;" />

      <!-- Steps & Heart Rate -->
      <Label fx:id="stepsLabel" layoutX="1060.0" layoutY="242.0" text="0%"
             style="-fx-font-size: 16; -fx-text-fill: #1E2F38;" />
      <Label fx:id="heartRateLabel" layoutX="1060.0" layoutY="296.0" text="Heart Rate: 0"
             style="-fx-font-size: 16; -fx-text-fill: #1E2F38;" />

      <!-- Fetch Activities -->
      <Button layoutX="1060.0" layoutY="393.0" mnemonicParsing="false" onAction="#handleFetchActivities" text="Fetch"
              style="-fx-background-color: #639A8F; -fx-text-fill: white; -fx-font-weight: bold;" />

      <!-- GridPane for Location Fields -->
      <GridPane layoutX="500.0" layoutY="150.0" hgap="10" vgap="10" style="-fx-padding: 15; -fx-background-color: #ffffff; -fx-border-color: #3B7B7B; -fx-border-radius: 6; -fx-border-width: 2;">
         <children>
            <Label text="Longitude:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #1E2F38;" />
            <TextField fx:id="longitudeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Latitude:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #1E2F38;" />
            <TextField fx:id="latitudeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Max Distance (km):" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #1E2F38;" />
            <TextField fx:id="distanceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Button onAction="#fetchNearbyWorkouts" text="Find Nearby Workouts"
                    GridPane.columnIndex="1" GridPane.rowIndex="3"
                    style="-fx-background-color: #3B7B7B; -fx-text-fill: white; -fx-font-weight: bold;" />

            <TextArea fx:id="resultArea" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" prefHeight="100"
                      style="-fx-border-color: #1E2F38; -fx-border-width: 1;" />
         </children>
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>

   </children>
</AnchorPane>
