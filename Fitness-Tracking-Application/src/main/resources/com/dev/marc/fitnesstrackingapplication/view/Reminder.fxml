<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="730.0" prefWidth="1110.0" style="-fx-background-color: #E2F1E7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dev.marc.fitnesstrackingapplication.controller.ReminderController">
   <top>
        <AnchorPane prefHeight="722.0" prefWidth="951.0" BorderPane.alignment="CENTER">
            <VBox prefHeight="591.0" prefWidth="930.0" spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="160.0" AnchorPane.topAnchor="20.0">
            <Label fx:id="labell" prefHeight="44.0" prefWidth="423.0" style="-fx-font-size: 30px; -fx-text-fill: #1E2F38; -fx-font-weight: bold;" text="Reminder">
               <font>
                  <Font size="58.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>

                <!-- Reminder Form Section -->
                <VBox prefHeight="369.0" prefWidth="1018.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #3B7B7B; -fx-border-width: 1; -fx-border-radius: 5;">
                    <Label style="-fx-text-fill: #1E2F38;" text="Set Your Workout Reminder">
                        <font>
                            <Font name="Segoe UI Semibold" size="16" />
                        </font>
                    </Label>

                    <!-- Date Picker for Reminder -->
                    <Label style="-fx-text-fill: #1E2F38;" text="Select Date">
                        <font>
                            <Font name="Segoe UI Regular" size="14" />
                        </font>
                    </Label>
                    <DatePicker fx:id="reminderDatePicker" style="-fx-pref-width: 300; -fx-border-color: #3B7B7B;" />

                    <!-- Notes Section -->
                    <Label style="-fx-text-fill: #1E2F38;" text="Reminder Notes">
                        <font>
                            <Font name="Segoe UI Regular" size="14" />
                        </font>
                    </Label>
                    <TextArea fx:id="reminderNotesField" style="-fx-background-color: white; -fx-border-color: #3B7B7B; -fx-border-radius: 3; -fx-pref-height: 100; -fx-pref-width: 300;" wrapText="true" />

                    <Button fx:id="saveReminderButton" style="-fx-background-color: #639A8F; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 5;" text="Save Reminder" />
                </VBox>

                <!-- Motivational Quote Section -->
                <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #3B7B7B; -fx-border-width: 1; -fx-border-radius: 5;">
                    <Label style="-fx-text-fill: #1E2F38;" text="Motivational Quote of the Day">
                        <font>
                            <Font name="Segoe UI Semibold" size="16" />
                        </font>
                    </Label>

                    <Label style="-fx-text-fill: #6c757d; -fx-font-size: 14; -fx-padding: 15 0 15 0;" text="“Success is the sum of small efforts, repeated day in and day out.”" />
                </VBox>
            </VBox>
        </AnchorPane>
   </top>
</BorderPane>
